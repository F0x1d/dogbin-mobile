<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="PopupMenuStyle" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorSurface">@color/dogBinBackground</item>
    </style>

    <style name="PopupMenuStyle.Amoled" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorSurface">@color/darkBackground</item>
    </style>


    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/dogBinAccent</item>
        <item name="colorPrimaryDark">@color/dogBinBackground</item>
        <item name="colorAccent">@color/dogBinAccent</item>

        <item name="android:statusBarColor">@color/dogBinBackground</item>
        <item name="android:navigationBarColor">@color/dogBinBackground</item>

        <item name="android:windowBackground">@color/dogBinBackground</item>

        <item name="materialAlertDialogTheme">@style/AlertDialogStyle</item>
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>

        <item name="textColor">@android:color/white</item>
        <item name="fabIconColor">@android:color/black</item>
        <item name="noteCardStrokeColor">@android:color/darker_gray</item>

        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
        <item name="popupTheme">@style/PopupMenuStyle</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorAccent">@color/dogBinAccent</item>
        <item name="dialogCornerRadius">10dp</item>
        <item name="android:dialogCornerRadius" tools:targetApi="p">10dp</item>
        <item name="android:background">@color/dogBinBackground</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogStyle.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogStyle.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialogStyle.Button</item>
    </style>

    <style name="AlertDialogStyle.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dogBinAccent</item>
        <item name="textAllCaps">false</item>
    </style>



