<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/pixelAccent</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/pixelAccent</item>

        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <item name="materialAlertDialogTheme">@style/AlertDialogStyle</item>

        <item name="textColor">@android:color/black</item>
        <item name="fabIconColor">@android:color/white</item>
        <item name="noteCardStrokeColor">@android:color/darker_gray</item>

        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/pixelAccent</item>
        <item name="dialogCornerRadius">10dp</item>
        <item name="android:dialogCornerRadius" tools:targetApi="p">10dp</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogStyle.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogStyle.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialogStyle.Button</item>
    </style>

    <style name="AlertDialogStyle.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/pixelAccent</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="PopupMenuStyle" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!--Just placeholder, used only in dark theme-->
    </style>

    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/black</item>
    </style>


    <style name="AppTheme.Gold" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/goldAccent</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/goldAccent</item>

        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <item name="materialAlertDialogTheme">@style/AlertDialogStyle.Gold</item>

        <item name="textColor">@android:color/black</item>
        <item name="fabIconColor">@android:color/white</item>
        <item name="noteCardStrokeColor">@android:color/darker_gray</item>

        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
    </style>

    <style name="AlertDialogStyle.Gold" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/goldAccent</item>
        <item name="dialogCornerRadius">10dp</item>
        <item name="android:dialogCornerRadius" tools:targetApi="p">10dp</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogStyle.Button.Gold</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogStyle.Button.Gold</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialogStyle.Button.Gold</item>
    </style>

    <style name="AlertDialogStyle.Button.Gold" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/goldAccent</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
